{
    "name": "Jekyll Site",
    "build": { "dockerfile": "Dockerfile" },
    "forwardPorts": [4000],
    "postCreateCommand": "bundle install",
    "features": {
      "ghcr.io/devcontainers/features/node:1": {
        "version": "20"
      }
    },
    "customizations": {
      "vscode": {
        "extensions": ["jekyllrc.jekyll-syntax-support"]
      }
    },
  "postStartCommand": "bundle install && bundle exec jekyll serve --host 0.0.0.0 --force_polling"
  }